                </div>
                <div class="fr">
                    <div class="page">
                        <span>Total <b>{{ nums }}</b> records</span>
                        {{ pager|raw }}
                    </div>
                </div>
            </div>
            <ul class="mans_dlist clearfix">
                {% for result in results %}
                <li>
                    <div class="pic">
                        <a href="#" title=""><img src="{{ result.logo }}" width="178" height="208" /></a>
                    </div>
                    <div class="txt">
