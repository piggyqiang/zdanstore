{% extends "game/index.twig" %}
{% set menu_name="用户数据"%}
{% set sidebar_name = "当日注册用户" %}
{% block content %}
<section id="main1">
  <div class="page-header">
    <h2>		
    	<a href="/user/register/1?type={{ type }}" class="btn {% if id == 1 %} btn-info{% endif %}">当日注册用户 </a>
    	<a href="/user/register/2?type={{ type }}" class="btn {% if id == 2 %} btn-info{% endif %}">昨日注册用户</a>
    	<a href="/user/register/3?type={{ type }}" class="btn {% if id == 3 %} btn-info{% endif %}">所有注册用户</a>
    </h2>
    	<a href="/user/register/{{ id }}?type=3"  class="btn {% if type == 3 %} btn-info{% endif %}">在线时间</a>
    	<a href="/user/register/{{ id }}?type=2"  class="btn {% if type == 2 %} btn-info{% endif %}">取消在线时间</a>
  </div>
  <div class="row-fluid">
  {{ void(this.widget('bootstrap.widgets.TbGridView',{
	  'id':'order-grid',
	  'type':'bordered condensed',
	  'dataProvider':dataProvider,
	  'columns':[
	   {
	      'name': 'id',
	      'value':'$data->id'
	   },
	   {
	      'name': '昵称',
	      'value':'$data->nickname'
	   },
	   {
	      'name': '用户名',
	      'value':'$data->username'
	   },
	   {
	      'name': '游戏时长',
	      'value':'$data->userplaytime'
	   },
	   {
	      'name': '邮箱',
	      'value':'$data->email'
	   },
	   {
	      'name': '注册时间',
	      'value':'$data->created'
	   },
	  ]
  })) }}
  </div>
</section>


{% endblock %}
