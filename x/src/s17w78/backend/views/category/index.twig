{% extends "game/index.twig" %}
{% set menu_name="游戏产品分类"%}
{% set sidebar_name = "管理分类" %}
{% block content %}
<div class="container-fluid">
    <div class="row-fluid">
    {{ void(this.widget('bootstrap.widgets.TbGridView',{
            'id':'app-grid', 
            'dataProvider':roots, 
            'columns':{
                0:'id',
                1:'root',
                2:{
                  'name':'name',
                  'value':data.name
                },
                3:'short_name',
                6:
                {
                     'class':'bootstrap.widgets.TbButtonColumn',
                     'template':'{view} {update} {delete}',
                     'buttons':{
                    'update':{'url':'Yii::app()->createUrl("category/show?root=$data->root")'},
                    }
                }
            },})) 
         }} 
  </div>
</div>
{% endblock %}