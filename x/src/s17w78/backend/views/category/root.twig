{% extends "game/index.twig" %}
{% set menu_name="游戏产品分类"%}
{% set sidebar_name = "创建分类" %}
{% block content %}
<div class="container-fluid">
    <div class="row-fluid">
    {% set nav_name = "create"%}
    <div class="form">
        {% include "layouts/notice.twig" %}
        {% set form = this.beginWidget("bootstrap.widgets.TbActiveForm", {'type':'horizontal','id':'create-     form','enableAjaxValidation':false,'htmlOptions':{'class':'form-horizontal','enctype':'multipart/form-data'} }) %}
                {{ form.textFieldRow(model, "name", {'placeholder':'game'})|raw }}
                {{ form.textFieldRow(model, "short_name", {'placeholder':'short_name'})|raw }}
                {{ form.textFieldRow(model, "description", {'placeholder':'description'})|raw }}
                    <div class="control-group">
                      <div class="controls">
                        <button type="submit" class="btn btn-large btn-primary">submit</button>
                      </div>
                    </div>
        {{ void(this.endWidget()) }}
        </div><!-- form -->
  </div>
</div>
{% endblock %}