{% extends "game/index.twig" %}
{% set menu_name="广告统计"%}
{% set sidebar_name = "生成广告链接" %}
{% block content %}
<section id="main1">
  <div class="page-header">
    <h2>{{ cpuser.cpname }} <small>生成新的广告链接</small></h2>
  </div>
  <div class="row-fluid">
    {% set form = this.beginWidget('bootstrap.widgets.TbActiveForm',{
    'type':'horizontal',
    'id':'adlink-form',
    'enableAjaxValidation':false,
    }) %}

    <div class="control-group">
      <div class="controls">
	<p class="help-block"> <span class="required">*</span> 为必填.</p>
      </div>
    </div>
    {{ form.errorSummary(model)|raw }}

    {{ form.radioButtonListRow(model,'prefix', model.all_prefix )|raw }}

    {{ form.textFieldRow(model,'name', {'maxlength':64})|raw }}

    {{ form.textFieldRow(model,'description')|raw }}

    {{ form.textFieldRow(model,'link', {'maxlength':256})|raw }}

    <div class="control-group">
      <div class="controls">
	{{ void(this.widget('bootstrap.widgets.TbButton', {
	'buttonType':'submit',
	'type':'primary',
	'label':model.isNewRecord ? 'Create' : 'Save',
	'htmlOptions': {'class':'btn-large'},
	})) }}
      </div>
    </div>

    {{ void(this.endWidget()) }}
  </div>
</section>

{% endblock %}
