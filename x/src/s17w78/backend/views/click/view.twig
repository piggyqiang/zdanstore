{% extends "game/index.twig" %}
{% set menu_name="广告统计"%}
{% set sidebar_name = "概况" %}
{% block content %}
<section id="main1">
  <div class="page-header">
    <h1>{{ adlink.name }}</h1>
    <h4>{{ adlink.description }}</h4>
  </div>
  <div class="span9">
    <p>生成链接: <code>{{ adlink.outerLink }}</code>example</p>
    <p>其中<code>example</code>可为任意标识，使用时自由添加</p>
    <p>短链接: <code>{{ adlink.shortLink }}</code></p>
    <p>短链接后仍然可以添加<code>?f=example</code>作为标识</p>
  </div>
  <div class="row-fluid">
  {{ void(this.widget('bootstrap.widgets.TbGridView',{
	  'id':'order-grid',
	  'type':'bordered condensed',
	  'dataProvider':dataProvider,
	  'columns':{
	     0:'click_time:datetime',
	     1:'ip',
	     2:'refer',
             3:{'name':'地理位置','value':'Yii::app()->ip->get_address($data->ip)'},
	     4:'l_from',
             5:'ua',
	  }
  })) }}
  </div>
</section>


{% endblock %}
