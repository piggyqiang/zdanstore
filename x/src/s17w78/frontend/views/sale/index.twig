{% extends "base/main.twig" %}
{% block content %}
<script type="text/javascript" src="{{ App.assets.Url}}/js/slider.js"></script>
<div class="main">
    <div class="position"><a href="#">Home</a> &gt; <a href="#">Womens</a></div>
    <div class="mleft">
        <div class="list_nav">
            <dl>
                <dt>Leastest Sales</dt>
                {% for le in lastest %}
                <dd><a href="{{ this.createUrl('/sale/subject/',{'id':le.id}) }}" title="{{ le.name }}">{{ le.name }}</a></dd>
                {% endfor %}
            </dl>
            {% for term in mensterm %}
            <dl>
                <dt>{{ term.name }}</dt>
                {% for child in term.child %}
                <dd><a href="/sale/term/id/{{ child.id }}" title="{{ child.name }}">{{ child.name }}</a></dd>
                {% endfor %}
            </dl>
            {% endfor %}
            {% for term in womensterm %}
            <dl>
                <dt>{{ term.name }}</dt>
                {% for child in term.child %}
                <dd><a href="/sale/term/id/{{ child.id }}" title="{{ child.name }}">{{ child.name }}</a></dd>
                {% endfor %}
            </dl>
            {% endfor %}
        </div>
    </div>
    <div class="mright">
        <!-- womens slider code -->
        <div class="slider">
            <div class="bd">
                <ul>
                  {% for f in focus %}
                  <li><a target="_blank" href="{{ f.url }}"><img src="{{ f.image }}" /></a></li>
                  {% endfor %}
                </ul>
            </div>
            <div class="hd">
                <ul></ul>
            </div>
            <div class="pnBtn prev">
                <span class="blackBg"></span>
                <a class="arrow" href="javascript:void(0)"></a>
            </div>
            <div class="pnBtn next">
                <span class="blackBg"></span>
                <a class="arrow" href="javascript:void(0)"></a>
            </div>
        </div>
        <script type="text/javascript">
        jQuery(".slider .bd li").first().before(jQuery(".slider .bd li").last() );
        jQuery(".slider").hover(function(){ 
            jQuery(this).find(".arrow").stop(true,true).fadeIn(300) 
        },function(){ 
            jQuery(this).find(".arrow").fadeOut(300) 
        });
            jQuery(".slider").slide({ titCell:".hd ul", mainCell:".bd ul", effect:"leftLoop",autoPlay:true, vis:3,autoPage:true, trigger:"click"
        });
        </script>
        <!-- womens slider code -->

        <!-- quick register -->
        <div class="quick_reg">
            <div>
                <span class="txt"><img src="images/reg_ico.png" align="absmiddle" /> <i>Sigh up to receive special offers and ZDANSTORE.COM news</i></span>
                <span class="email">
                    <input type="text" name="" value="youemail@example.com" class="email_ipt">
                    <input type="submit" name="" value="GO!" class="email_btn">
                </span>
            </div>
        </div>

                <!-- mans product list -->
        <div class="index_product">
            <div class="total clearfix">
                <div class="fl">
                    <select><option>New Arrivals</option></select>
                    Per Page <select><option>10</option><option>20</option><option>30</option></select>
                </div>
                <div class="fr">
                    <div class="page">
                        <span>Total <b>{{ nums }}</b> records</span>
                        {{ pager|raw }}
                    </div>
                </div>
            </div>
            <ul class="mans_dlist clearfix">
                {% for result in results %}
                <li>
                    <div class="pic">
                        <a href="{{ this.createUrl('/product/view',{'id':result.product_id} )}}" title=""><img src="{{ result.product.logo }}" width="178" height="208" /></a>
                    </div>
                    <div class="txt">
                        <span class="name"><a href="{{ this.createUrl('/brands/view',{'id':result.product.brand_id })}}" title="">{{ result.product.brand.name }}</a></span><br/>
                        <a href="{{ this.createUrl('/product/view',{'id':result.product_id} )}}" title="">{{ result.product.name }}</a><br/>
                        <span class="price">{{ result.product.shop_price}}</span><span class="price">{{ this.getNowPrice(result.product_id) }}</span><br/>
                        <span class="new">{% if result.product.is_new == 1 %}New Arrivals{% endif %}</span>
                    </div>
                </li>
                {% endfor %}
            </ul>
            <div class="total clearfix">
                <div class="fl">
                    <select><option>New Arrivals</option></select>
                    Per Page <select><option>10</option><option>20</option><option>30</option></select>
                </div>
                <div class="fr">
                    <div class="page">
                        <span>Total <b>{{ nums }}</b> records</span>
                        {{ pager|raw }}
                    </div>
                </div>
            </div>
        </div>

        <!-- brands list -->
        <div class="brands_box clearfix">
            <ul>
                {% for brand in brands %}
                <li><a href="{{ this.createUrl('/brands/view',{'id':brand.id })}}" title=""><img src="{{ brand.image }}" width="40" height="40" /></a></li>
                {% endfor %}
            </ul>
            <a href="/brands" class="more"><i>MORE BRANDS &gt;</i></a>
        </div>

    </div>
    <div class="clear"></div>

    <!-- ad2 -->
    <div class="mans_ad2 clearfix">
        <div class="pic">
            {% for f in footers %}
            <a href="{{ f.url }}" title=""><img src="{{ f.url }}" width="280" height="180" /></a>
            {% endfor %}
        </div>
    </div>

</div>

{% endblock %}