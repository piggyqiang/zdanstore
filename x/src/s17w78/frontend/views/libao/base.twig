        <!-- TOP -->
        <!-- HEARDER -->
        <div class="card_header">
            <div class="card_main clearfix">
                <h1 class="logo">
                    <a href="/">一起玩棋牌网</a>
                </h1>
                <h2 class="card_h2">
                    <img src="{{ App.assets.Url}}/images/card/h2.png">
                </h2>
                <div class="searchbox">
                    <div class="card_search">
                        <form action="/libao/search" >
                            <input type="text" name = "keywords" value="{{ keywords }}" class="card_input"><button type="submit" class="card_search_btn">搜 索</button>
                        </form>
                    </div>
                    <!-- <span class="search_hot"><font class="red">热门搜索：</font>
                        <a href="">达人麻将</a>   <a href="">JJ游戏</a>   <a href="">老K游戏</a>   <a href="">凤凰山庄</a>
