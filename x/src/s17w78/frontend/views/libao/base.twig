            </div>
        </div><!-- HEADER -->
        <!-- CARD NAV -->
        <div class="card_nav">
            <div class="card_main">
                <ul class="card_nav clearfix">
                    <li {% if navName == "index" %}class="cur"{% endif %}>
                        <a href="/libao/" class="aw">礼包大全</a>
                    </li>
                    <li {% if navName == "help" %}class="cur"{% endif %}>
                        <a href="/libao/help" class="aw">领取指南</a>
                    </li>
                    <li>
                        <a href="http://i.1378.com/user/code" class="aw">存号箱</a>
