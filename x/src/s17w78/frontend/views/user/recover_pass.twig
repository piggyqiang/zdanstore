{% extends "base/main.twig" %}

{% block content %}


<div class="main">
    <div class="position"><a href="#">Home</a> &gt; <a href="/user/">My Account</a></div>
    <div class="login_box clearfix">
        <div class="sign">
            {% if result == "0" %}
                <div class="reg_info">
                    <div class="succ">
                        <p>
                            <span class="red">{{ message }}</span><br>
                        </p>
                    </div>
                </div>
            {% elseif result == "2"%}
                <div class="reg_info">
                    <div class="succ">
                        <p>
                            <span class="red">{{message}}</span><br>
                        </p>
                    </div>
                </div>
            {% else %}
            <div class="title">Reset Password</div>
            <div class="content">
                <p class="tip">Please enter your new password.</p>
               {% set form = this.beginWidget("bootstrap.widgets.TbActiveForm", {'type':'horizontal','id':'create-form','enableAjaxValidation':true,'htmlOptions':{'class':'form-horizontal','enctype':'multipart/form-data'} }) %}
                <ul class="login_form">
                    <li class="clearfix">
                        <span>new password: </span>
                       {{ form.passwordField(user, "password", {'placeholder':'','class':"login_input"})|raw }}
                    {{ form.error(user, 'password', {'placeholder':'','class':"login_span"})|raw }}
                    </li>
                    <li class="clearfix">
                         <span>confirm password: </span>
                        {{ form.passwordField(user, "confirm_password", {'placeholder':'','class':"login_input"})|raw }}
                        {{ form.error(user, 'confirm_password', {'placeholder':'','class':"login_span"})|raw }}
                    </li>
                </ul>
                <div class="submit_btn"><input type="submit" name="" value="Submit" class="btn2"></div>
                {{ void(this.endWidget()) }}
            </div>
            {% endif %}
        </div><!-- sign in end -->
    </div>

</div>
{% endblock %}
