{% extends "game/index.twig" %}
{% set menu_name="管理员"%}
{% set sidebar_name = "管理管理员" %}
{% block content %}
<div class="container-fluid">
    <div class="row-fluid">
		<h2>用户管理<span class="info">修改管理员信息</span></h2>

		<br />
		<br />
		{% include "layouts/notice.twig" %}
		{% set form = this.beginWidget("bootstrap.widgets.TbActiveForm", {'type':'horizontal','id':'create-	form','enableAjaxValidation':false,'htmlOptions':{'class':'form-horizontal','enctype':'multipart/form-data'} }) %}
    		{{ form.textFieldRow(model, "email", {'placeholder':'xxxx@mhgame.com'})|raw }}
    		{{ form.textFieldRow(model, "username", {'placeholder':'xxx'})|raw }}
    		{{ form.passwordFieldRow(model, "password", {'placeholder':''})|raw }}
		    <div class="control-group">
		      <div class="controls">
		        <button type="submit" class="btn btn-large btn-primary">submit</button>
		      </div>
		    </div>
    	{{ void(this.endWidget()) }}
	</div>
</div>
{% endblock %}