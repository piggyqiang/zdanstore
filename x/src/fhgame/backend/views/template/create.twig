{% extends "other/index.twig" %}
{% set menu_name="模板"%}
{% set sidebar_name = "新建模板" %}
{% block content %}
<div class="container-fluid">
    <div class="row-fluid">
      <div id="main-content-zone">
  <div class="page-content"> 
    <div id="inner" style="width:100%;float:left;">
      <h2>创建新页面</h2>
      <div class="form">
        {% include "layouts/notice.twig" %}
        {% set form = this.beginWidget('bootstrap.widgets.TbActiveForm', {
        'id':'object-form',
        'enableAjaxValidation':false,
        'htmlOptions':{'enctype':'multipart/form-data'},
        }) %}
        {{ form.errorSummary(model)|raw }}
        <div class="form-wrapper">
            <div id="form-body" >
                <div id="form-body-content">
                  <div id="titlewrap">
                    {{ form.textFieldRow(model, 'name', {
                    'tabindex':'1',
                    'id':'txt_name',
                    })|raw }}
                  </div>
                  <div id="titlewrap">
                        {{ form.fileFieldRow(model, 'upload',{
                        })|raw }}
                  </div>
                </div>
            </div>
                        
        </div>
        
    <div class="control-group">
      <div class="controls">
        {{ void(this.widget('bootstrap.widgets.TbButton', {
            'buttonType':'submit',
            'type':'primary',
            'label':model.isNewRecord ? '创建' : '更新',
            'htmlOptions': {'class':'btn-large'},
        })) }}
      </div>
    </div>
        <br class="clear" />
        {{ void(this.endWidget()) }}
      </div><!-- form -->
    </div>
  </div>
</div>
    </div>
</div>
{% endblock %}