<!DOCTYPE html>
<html lang="en">
  {% include "layouts/header.twig" %}

  <!--[if lt IE 7 ]> <body class="ie ie6"> <![endif]-->
  <!--[if IE 7 ]> <body class="ie ie7 "> <![endif]-->
  <!--[if IE 8 ]> <body class="ie ie8 "> <![endif]-->
  <!--[if IE 9 ]> <body class="ie ie9 "> <![endif]-->
  <!--[if (gt IE 9)|!(IE)]><!--> 
  <body class=""> 
  <!--<![endif]-->
    
    
    <div class="row-fluid login">
    <div class="dialog">
        <p class="brand" href="index.html">fhgame.com管理后台</p>
        <div class="block">
            <div class="block-header">
                <h2>Sign In</h2>
            </div>
            {% set form = this.beginWidget('bootstrap.widgets.TbActiveForm', {'id':'login-form', 'enableClientValidation':true, 'htmlOptions':{'class':'form-signin' }, 'errorMessageCssClass':'text-error' }) %}
            <label>Username</label>
            {{ form.textField(model, 'username', {'class':'span12', 'placeholder':'' } )|raw }}
            {{ form.error(model, 'username')|raw }}
            <label>Password</label>
            {{ form.passwordField(model, 'password', {'class':'span12', 'placeholder':''} )|raw }}
            {{ form.error(model, 'password')|raw }}
            <div class="form-actions">
                     {{ C.Html.htmlButton('Sign in', {'class':'btn btn-success pull-right', 'type':'submit'})|raw }}
                    <!--You can have a remember me or sign up here-->
                    <!--<label class="remember-me"><input type="checkbox"> Remember me</label>-->
                    <!--<a href="sign-up.html" class="sign-up">Sign Up</a>-->
                    <div class="clearfix"></div>
            </div>
            {{ void(this.endWidget()) }}
        </div>
    </div>
</div>

    
    <script type="text/javascript">
        $("[rel=tooltip]").tooltip();
        $(function() {
            $('.demo-cancel-click').click(function(){return false;});
        });
    </script>
    
  </body>
</html>


