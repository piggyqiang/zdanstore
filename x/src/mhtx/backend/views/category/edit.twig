{% extends "/layouts/base.twig" %}
{% block content %}
<section id="main1">
  <div class="page-header">
    <h4>当前位置：<a href="{{ this.createUrl('show',{'root':parent.root}) }}">分类管理</a>>>编辑分类</h4>
  </div>
  <div class="row-fluid">
    {% set form = this.beginWidget("bootstrap.widgets.TbActiveForm", {'type':'horizontal','id':'create-form','enableAjaxValidation':false}) %}
    <div class="control-group ">
        <label for="Category_name" class="control-label">父类：</label>
        <div class="controls">
            {{ parent.name }}
        </div>
    </div>
    {{ form.textFieldRow(catgory, "name"|raw) }}
    <div class="control-group">
      <div class="controls">
        <button type="submit" class="btn btn-large btn-primary">Update</button>
      </div>
    </div>
    {{ void(this.endWidget()) }}
  </div>
</section>
{% endblock %}