{% extends "/layouts/base.twig" %}
{% block content %}
<section id="main1">
  <div class="page-header">
    <h1>添加分类</h1>
  </div>
  <div class="row-fluid">
    {% set form = this.beginWidget("bootstrap.widgets.TbActiveForm", {'type':'horizontal','id':'create-form','enableAjaxValidation':false}) %}
    <div class="control-group ">
        <label for="Category_name" class="control-label">级别</label>
        <div class="controls">
            <select name="Category[id]">
                <option value="{{ root.id }}">顶级</option>
                    {% for desc in descendants %}
                <option value="{{ desc.id }}">{{ desc.name }}</option>
                    {% endfor %}
            </select>
        </div>
    </div>
    {{ form.textFieldRow(model, "name", {'placeholder':'分类名称'})|raw }}
    <div class="control-group">
      <div class="controls">
        <button type="submit" class="btn btn-large btn-primary">Save</button>
      </div>
    </div>
    {{ void(this.endWidget()) }}
  </div>
</section>
{% endblock %}