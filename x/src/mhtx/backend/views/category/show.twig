{% extends "/layouts/base.twig" %}
{% block content %}
<section id="main1">
<div class="page-header">
  <h4>当前位置：<a href="this.createUrl('index')">root管理</a>>>分类管理</h4>
</div>
<h2>{{ root.name }}</h2>
<button class="btn btn-small btn-primary" onclick="javascript:window.location.href='{{ this.createUrl('create',{'root':root.id})}}'" type="button">新建分类</button>
<br/><br/>
<div class="row-fluid">
  <table class="table table-striped table-bordered table-bordered">
    <thead>
      <tr>
        <td>ID</td>
        <td>分类名称</td>
        <td>创建时间</td>
        <td>操作</td>
      </tr>
    </thead>
    <tbody>
      {% for data in descendants %} 
      <tr>
        <td align="center">{{ data.id }}</td>
        <td align="center">{{ data.name}}&nbsp;&nbsp;&nbsp;({{ data.level - 1}}级分类)</td>
        <td align="center">{{ data.created }}</td>
        <td align="center"><a href= "{{ this.createUrl('edit', {'id':data.id} ) }}">编辑</a>
        &nbsp;&nbsp;<a href= "{{ this.createUrl('delete', {'id':data.id} ) }}">删除</a>
        </td>
      </tr>
        {% endfor %}
    </tbody>
  </table>
  <div class="page">
    {{ pager|raw }}
  </div>
<div>
</section>
{% endblock %}